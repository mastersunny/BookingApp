<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.ornach.richtext.RichEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_email_bg"
            android:hint="Email"
            android:maxLines="1"
            android:padding="16dp"
            android:textColor="@color/grey_lite"
            android:textSize="12sp"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <com.ornach.richtext.RichEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_phone_bg"
            android:hint="+880*********"
            android:maxLines="1"
            android:padding="16dp"
            android:textColor="@color/grey_lite"
            android:textSize="12sp"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <com.ornach.richtext.RichEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_name_bg"
            android:hint="Name"
            android:maxLines="1"
            android:padding="16dp"
            android:textColor="@color/grey_lite"
            android:textSize="12sp"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <RadioGroup
            android:id="@+id/radioSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Male" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />

        </RadioGroup>

        <com.ornach.richtext.RichEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_home_bg"
            android:hint="Your city of Residence"
            android:maxLines="1"
            android:padding="16dp"
            android:textColor="@color/grey_lite"
            android:textSize="12sp"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <com.ornach.richtext.RichEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_id_bg"
            android:hint="City on your ID Card"
            android:maxLines="1"
            android:padding="16dp"
            android:textColor="@color/grey_lite"
            android:textSize="12sp"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <com.ornach.richtext.RichEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_birthday_bg"
            android:hint="Your Birthday"
            android:maxLines="1"
            android:padding="16dp"
            android:textColor="@color/grey_lite"
            android:textSize="12sp"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/background_color"
                android:text="Logout"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
