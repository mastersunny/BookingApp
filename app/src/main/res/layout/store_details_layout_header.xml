<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_details"
    android:paddingBottom="@dimen/margin_20"
    android:paddingLeft="@dimen/margin_20"
    android:paddingTop="@dimen/margin_20">

    <View
        android:id="@+id/dummy"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/total_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dummy"
        android:layout_marginTop="@dimen/margin_10"
        android:text="10 Offers"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_offer"
        android:layout_marginTop="@dimen/margin_10">

        <ImageView
            android:id="@+id/store_image"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/deli_grocery_m" />

        <LinearLayout
            android:id="@+id/follow_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_toRightOf="@id/store_image"
            android:background="@drawable/follow_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_20"
                android:paddingRight="@dimen/margin_20"
                android:paddingTop="@dimen/margin_5"
                android:text="Follow"
                android:textColor="@color/white" />
        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/CustomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/follow_layout"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_toRightOf="@+id/store_image" />
    </RelativeLayout>
</RelativeLayout>