<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.ornach.richtext.RichEditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_name_bg"
            android:hint="Name"
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:singleLine="true"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <com.ornach.richtext.RichEditText
            android:id="@+id/edt_email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_email_bg"
            android:hint="example@gmail.com"
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <com.ornach.richtext.RichEditText
            android:id="@+id/edt_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_phone_bg"
            android:hint=""
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:enabled="false"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:inputType="phone"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <com.ornach.richtext.RichEditText
            android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_home_bg"
            android:hint="Address"
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <com.ornach.richtext.RichEditText
            android:id="@+id/edt_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_name_bg"
            android:hint="Age"
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <RadioGroup
            android:id="@+id/radioSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Male" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />

        </RadioGroup>

        <com.ornach.richtext.RichEditText
            android:id="@+id/edt_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_home_bg"
            android:hint="City"
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <com.ornach.richtext.RichEditText
            android:id="@+id/edt_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_home_bg"
            android:hint="Country"
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <com.ornach.richtext.RichEditText
            android:id="@+id/edt_nid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_id_bg"
            android:hint="NID"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <com.ornach.richtext.RichEditText
            android:id="@+id/edt_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/edt_birthday_bg"
            android:hint="yyyy-mm-dd"
            android:imeOptions="actionDone"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:rt_backgroundColor="#E4E4E4"
            app:rt_borderColor="@android:color/transparent"
            app:rt_borderWidth="1dp"
            app:rt_radius="45dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/background_color"
                android:text="register"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
